{
  "name": "notification-dispatcher",
  "version": "0.1.0",
  "description": "Multi-channel notification dispatcher",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "node --watch --experimental-strip-types src/index.ts",
    "build": "tsc --project tsconfig.build.json",
    "start": "node dist/index.js",
    "migrate": "node --experimental-strip-types src/db/migrate-cli.ts",
    "worker": "node --experimental-strip-types src/workers/cli.ts",
    "worker:dev": "node --watch --experimental-strip-types src/workers/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@hono/node-server": "1.19.9",
    "@hono/zod-validator": "0.7.6",
    "dotenv": "17.3.1",
    "hono": "4.12.1",
    "postgres": "3.4.8",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "10.0.1",
    "@types/node": "25.3.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "10.0.1",
    "globals": "17.3.0",
    "prettier": "3.8.1",
    "typescript": "5.8.3",
    "typescript-eslint": "8.56.0",
    "vitest": "4.0.18"
  },
  "overrides": {
    "minimatch": ">=10.2.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
